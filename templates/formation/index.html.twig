{% extends 'base.html.twig' %}

{% block titrePage %}Liste des formations{% endblock %}

{% block contenu %}

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>NomCourt</th>
            <th>NomLong</th>
        </tr>
    </thead>
    <tbody>

        {% for formation in formations %}
        <tr>
            <td> <a href="{{ path('formation_show', {'nomCourt': formation.nomCourt}) }}"
                    style="color:white; text-decoration:none;">{{ formation.nomCourt }}</a></td>
            <td><a href="{{ path('formation_show', {'nomCourt': formation.nomCourt}) }}"
                style="color:white; text-decoration:none;">{{ formation.nomLong }}</a></td>
            <td>

                <td> <a class="nav-link" href="{{path('formation_edit',{'id':formation.id})}}">Modifier</a></td>

            </td>
        </tr>

        {% else %}
        <tr>
            <td colspan="4">Aucune formation enregistr√©e</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}