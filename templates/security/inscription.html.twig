{% extends 'base.html.twig' %}


{% block contenu %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-9" style="text-align: left">
            <div class="card" style="width: 14 rem;">
                <b>
                    <div class="card-header">
                        Inscription sur ProStages
                    </div>
                </b>
                {{ form_start(vueFormulaire) }}

                <label>&nbsp;Prénom </label>
                {{form_errors(vueFormulaire.prenom)}}
                {{ form_widget(vueFormulaire.prenom, {'attr':{'placeholder':"Votre prénom..."}})}}

                <label>&nbsp;Nom</label>
                {{form_errors(vueFormulaire.nom)}}
                {{ form_widget(vueFormulaire.nom, {'attr':{'placeholder':"Votre nom..."}})}}

                <label>&nbsp;Email</label>
                {{form_errors(vueFormulaire.email)}}
                {{ form_widget(vueFormulaire.email, {'attr':{'placeholder':"Votre email..."}})}}

                {{form_errors(vueFormulaire.password)}}
                {{ form_widget(vueFormulaire.password, {'attr':{'placeholder':"Votre mot de passe..."}})}}

                <br>
                <pre> <button type="submit" class="btn btn-secondary">S'inscrire</button></pre>


                {{ form_end(vueFormulaire) }}

            </div>
        </div>
    </div>
</div>

{% endblock %}