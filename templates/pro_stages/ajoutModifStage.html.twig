{% extends 'base.html.twig' %}
{% block titre %}
{% if action == "ajouter" %}
Ajout d'un stage
{% else %}
Modifier un stage
{% endif %}
{% endblock %}

{% block contenu %}



<div class="container-fluid">
    <div class="row">
        <div class="col-md-9" style="text-align: left">
            <div class="card" style="width: 14 rem;">
                <b>
                    <div class="card-header">
                        Saisissez les caractéristiques d'un stage
                    </div>
                </b>
                {{form_start(vueFormulaire)}}

                <label>&nbsp;Nom </label>
                {{form_errors(vueFormulaire.titre)}}
                {{form_widget(vueFormulaire.titre, {'attr':{'placeholder':"Nom du stage..."}})}}

                <label>&nbsp;Description</label>
                {{form_errors(vueFormulaire.description)}}
                {{form_widget(vueFormulaire.description, {'attr':{'placeholder':"Description du stage..."}})}}

                <label>&nbsp;Email</label>
                {{form_errors(vueFormulaire.email)}}
                {{form_widget(vueFormulaire.email, {'attr':{'placeholder':"Email..."}})}}<br><br>

                <b><label>&nbsp;Entreprise</label><br></b>

                <label>&nbsp;Nom </label>
                {{form_errors(vueFormulaire.entreprise.nom)}}
                {{form_widget(vueFormulaire.entreprise.nom, {'attr':{'placeholder':"Nom de l'entreprise..."}})}}

                <label>&nbsp;Activité principale </label>
                {{form_errors(vueFormulaire.entreprise.activite)}}
                {{form_widget(vueFormulaire.entreprise.activite, {'attr':{'placeholder':"Activité de l'entreprise..."}})}}

                <label>&nbsp;Adresse </label>
                {{form_errors(vueFormulaire.entreprise.adresse)}}
                {{form_widget(vueFormulaire.entreprise.adresse, {'attr':{'placeholder':"Adresse..."}})}}

                <label>&nbsp;Site web </label>
                {{form_errors(vueFormulaire.entreprise.siteWeb)}}
                {{form_widget(vueFormulaire.entreprise.siteWeb, {'attr':{'placeholder':"Site web..."}})}}<br>

                
                <b><label>&nbsp;Le stage est proposé aux formations suivantes</label><br></b>
                {{ form_row(vueFormulaire.formations)}}

                

                <br><pre> <button type="submit" class="btn btn-secondary">Enregistrer</button></pre>
               

                {{form_end(vueFormulaire)}}


            </div>
        </div>
    </div>
</div>

{% endblock %}