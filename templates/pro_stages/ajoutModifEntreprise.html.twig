{% extends 'base.html.twig' %}
{% block titre %}
{% if action == "ajouter" %}
Ajout d'une entreprise
{% else %}
Modification d'une entreprise
{% endif %}
{% endblock %}

{% block contenu %}



<div class="container-fluid">
    <div class="row">
        <div class="col-md-9" style="text-align: left">
            <div class="card" style="width: 14 rem;">
                <b>
                    <div class="card-header">
                        Saisissez les caractéristiques d'une entreprise
                    </div>
                </b>
                {{form_start(vueFormulaire)}}

                <label>&nbsp;Nom </label>
                {{form_errors(vueFormulaire.nom)}}
                {{form_widget(vueFormulaire.nom, {'attr':{'placeholder':"Nom de l'entreprise..."}})}}

                <label>&nbsp;Activité principale</label>
                {{form_errors(vueFormulaire.activite)}}
                {{form_widget(vueFormulaire.activite, {'attr':{'placeholder':"Activité de l'entreprise..."}})}}

                <label>&nbsp;Adresse</label>
                {{form_errors(vueFormulaire.adresse)}}
                {{form_widget(vueFormulaire.adresse, {'attr':{'placeholder':"Adresse de l'entreprise..."}})}}

                <label>&nbsp;Site web</label>
                {{form_errors(vueFormulaire.siteWeb)}}
                {{form_widget(vueFormulaire.siteWeb, {'attr':{'placeholder':"Url du site web..."}})}}

                <br><pre> <button type="submit" class="btn btn-secondary">Enregistrer</button></pre>
               

                {{form_end(vueFormulaire)}}


            </div>
        </div>
    </div>
</div>

{% endblock %}